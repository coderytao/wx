/* pages/music-play/music-play.wxss */
page{
  background:white;
 
}
/*背景*/
.music{
  margin-top:100px;
}

image , .bg-cover{
  position: fixed;
  left:0px;
  top:0;
  width: 100%;
  height: 100%;
  z-index:-1;
}
.slot .active{
  color:red;
}
.slot{
  font-size: 14px;
  color: aliceblue;
  margin:0 15px;
}
.detail-slot{
  margin-left:10px;
}
.bg-cover{
  /*半透明毛玻璃效果*/
  background-color: rgba(0,0,0,0.6);
  backdrop-filter: blur(30px);
}

.music{
  margin-top:80px;
 
}
.line{
  margin:260px 10px;
  width: 100%;
  height:150px;
}
.line text:first-child{
  font-size: 16px;
  color:white;
  font-weight: 400;
}
.line text:last-child{
  font-size: 14px;
  color:white;
  font-family: 'Courier New', Courier, monospace;
}
.slide{
  margin-top:40px;
}
.music .swiper-image{
  width:100%;
  height: 280px;

}

.video ,.video-image {
  width: 40px;
  height: 40px;
  margin:380px 180px;
}
.video .top{
  width: 40px;
  height: 40px;
  margin:380px 80px;
}
.video .next{
  width: 40px;
  height: 40px;
  margin:380px 280px;
}


.line text{
  display: flex;
  flex-flow: wrap;
  font-family: 'Courier New', Courier, monospace;
  color: aquamarine;
  margin:2px 10px;
}

